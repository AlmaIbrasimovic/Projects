<Page
    x:Class="App1.PopuniKarton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Right" Width="1500">
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="275,70,0,0" Text="Odaberite pacijenta za kojeg popunjavate karton" TextWrapping="Wrap" VerticalAlignment="Top" Width="360"/>
        <ComboBox x:ConnectionId='1' x:Name ="odabir" HorizontalAlignment="Left" Margin="275,113,0,0" VerticalAlignment="Top" Width="340"/>
        <TextBlock FontFamily="Georgia" FontSize="14"  FontWeight="Bold"  HorizontalAlignment="Left" Margin="175,250,0,0" Text="Popunite sljedeće podatke:" TextWrapping="Wrap" VerticalAlignment="Top" Width="230"/>
        <TextBlock HorizontalAlignment="Left" Margin="181,315,0,0" Text="Zadnji pregled:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <CalendarDatePicker x:ConnectionId='2' x:Name ="dat" HorizontalAlignment="Left" Margin="345,310,0,0" VerticalAlignment="Top" Width="240"/>
        <TextBlock HorizontalAlignment="Left" Margin="178,395,0,0" Text="Prethodne bolesti:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="898,155,0,0" Text="Alergije:" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.484,1.75"/>
        <TextBlock HorizontalAlignment="Left" Margin="898,310,0,0" Text="Terapije:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="890,465,0,0" Text="Mišljenje doktora:" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.806,0.5"/>
        <TextBox x:ConnectionId='3' x:Name ="bolesti" HorizontalAlignment="Left" Margin="345,380,0,0" Text="" VerticalAlignment="Top" Width="240" Height="110"/>
        <TextBox x:ConnectionId='4' x:Name ="alergije" HorizontalAlignment="Left" Margin="1025,113,0,0" Text="" VerticalAlignment="Top" Width="230" Height="112"/>
        <TextBox x:ConnectionId='5' x:Name="terapije" HorizontalAlignment="Left" Margin="1025,263,0,0" Text="" VerticalAlignment="Top" Height="117" Width="230"/>
        <TextBox x:ConnectionId='6' x:Name ="misljenja" HorizontalAlignment="Left" Margin="1025,420,0,0" Text="" VerticalAlignment="Top" Height="117" Width="230"/>
        <Button x:ConnectionId='7' Foreground="DarkRed" Content="Popuni" HorizontalAlignment="Left" Margin="180,565,0,0" VerticalAlignment="Top" Height="30" Width="165"                     />
        <Button x:ConnectionId='8' Foreground="DarkRed" Content="Nazad" HorizontalAlignment="Left" Margin="430,565,0,0" VerticalAlignment="Top" Height="30" Width="165"                       />

    </Grid>
</Page>

