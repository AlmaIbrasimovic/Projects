@model IEnumerable<TravelBookAspNetMVCAzure.Models.AgencijaAzure>
@{
    ViewBag.Title = "Kontakt";
}
<h2>@ViewBag.Title</h2>

<address>
    <strong>Adresa:</strong><br />
    Branilaca Sarajeva 21<br />
    Sarajevo, BIH 71000<br />
</address>
<h3>Agencije članice</h3>
<ul style="list-style-type:circle" class="col-md-2">
    @foreach (var item in Model)
    {
        <li>@Html.DisplayFor(modelItem => item.naziv)</li>
    }
</ul>

<style>
    #map {
        height: 400px;
        width: 1000px;
    }
</style>
<div class="row">
    <div id="map"></div>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 43.857549, lng: 18.420762 },
                zoom: 20
            });
            var marker = new google.maps.Marker({
                position: { lat: 43.857549, lng: 18.420762 },
                map: map
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCNjwJzfpRs69kcmBh_ef61tIU8cNvKBNs&callback=initMap"
            async defer></script>
</div>
<br /> <br />

